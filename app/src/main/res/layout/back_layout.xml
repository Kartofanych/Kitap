<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrolling_genres1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >

        <TextView
            android:id="@+id/first"
            style="@style/black_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/scroll_for_genres_2"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:tag="Рассказы"
            android:text="Рассказы" />

        <TextView
            android:id="@+id/second"
            style="@style/black_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/first"
            android:background="@drawable/scroll_for_genres_2"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:tag="Сказки"
            android:text="Сказки" />

        <TextView
            android:id="@+id/third"
            style="@style/black_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/second"
            android:background="@drawable/scroll_for_genres_2"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:tag="Повести"
            android:text="Повести" />
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrolling_genres2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/scrolling_genres1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >

        <TextView
            android:id="@+id/fourth"
            style="@style/black_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/scroll_for_genres_2"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:tag="Зарубежная литература"
            android:text="Зарубежная литература" />

        <TextView
            android:id="@+id/fifth"
            style="@style/black_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/fourth"
            android:background="@drawable/scroll_for_genres_2"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:tag="Поэзия"
            android:text="Поэзия" />

    </RelativeLayout>
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrolling_genres3"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/scrolling_genres2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >

        <TextView
            android:id="@+id/sixth"
            style="@style/black_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/scroll_for_genres_2"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:tag="Мысли"
            android:text="Мысли" />

        <TextView
            android:id="@+id/seventh"
            style="@style/black_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/sixth"
            android:background="@drawable/scroll_for_genres_2"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:tag="Военная литература"
            android:text="Военная литература" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrolling_genres4"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/scrolling_genres3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >

        <TextView
            android:id="@+id/eightth"
            style="@style/black_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/scroll_for_genres_2"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:tag="Фантастика"
            android:text="Фантастика" />

        <TextView
            android:id="@+id/ninth"
            style="@style/black_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/eightth"
            android:background="@drawable/scroll_for_genres_2"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:tag="Статьи"
            android:text="Статьи" />

        <TextView
            android:id="@+id/tenth"
            style="@style/black_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/ninth"
            android:background="@drawable/scroll_for_genres_2"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:tag="Новеллы"
            android:text="Новеллы" />
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrolling_genres5"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/scrolling_genres4"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        >

        <TextView
            android:id="@+id/eleventh"
            style="@style/black_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/scroll_for_genres_2"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:tag="Романы"
            android:text="Романы" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>