<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/full">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="1dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHeight_percent="0.95"/>
    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHeight_percent="0.1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_baseline_navigate_before_24"

                    />
                <Button
                    android:id="@+id/btn1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="1"
                    android:textSize="10sp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@+id/btn0"
                    android:textColor="#000000"
                    android:fontFamily="@font/montserrat_alternates_bold"
                    android:background="@drawable/designfor_nopages_but"
                    />
                <Button
                    android:id="@+id/btn2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="..."
                    android:textSize="10sp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@+id/btn1"
                    android:textColor="#000000"
                    android:fontFamily="@font/montserrat_alternates_bold"
                    android:background="@drawable/designfor_nopages_but"
                    />
                <Button
                    android:id="@+id/btn3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="3"
                    android:textSize="10sp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@+id/btn2"
                    android:textColor="#000000"
                    android:fontFamily="@font/montserrat_alternates_bold"
                    android:background="@drawable/designfor_nopages_but"
                    />
                <Button
                    android:id="@+id/btn4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="4"
                    android:textSize="10sp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@+id/btn3"
                    android:textColor="@color/White"
                    android:fontFamily="@font/montserrat_alternates_bold"
                    android:background="@drawable/designfor_pages_but"
                    />
                <Button
                    android:id="@+id/btn5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="5"
                    android:textSize="10sp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@+id/btn4"
                    android:textColor="#000000"
                    android:fontFamily="@font/montserrat_alternates_bold"
                    android:background="@drawable/designfor_nopages_but"
                    />
                <Button
                    android:id="@+id/btn6"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="..."
                    android:textSize="10sp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@+id/btn5"
                    android:textColor="#000000"
                    android:fontFamily="@font/montserrat_alternates_bold"
                    android:background="@drawable/designfor_nopages_but"
                    />
                <Button
                    android:id="@+id/btn7"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="20"
                    android:textSize="10sp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@+id/btn6"
                    android:textColor="#000000"
                    android:fontFamily="@font/montserrat_alternates_bold"
                    android:background="@drawable/designfor_nopages_but"
                    />
                <Button
                    android:id="@+id/btn8"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_baseline_navigate_next_24"
                    android:layout_toEndOf="@+id/btn7"
                    />
            </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>