<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Irek">

    <include layout="@layout/header"
        android:id="@+id/header_addition"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/right"
        android:padding="10dp"
        android:background="@drawable/designfor_kitap_inlist"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:id="@+id/sered"
            android:layout_width="340dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp"
                android:text="Краткое описание:"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:textColor="@color/Orange_In_Addition"
                android:textSize="17sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/designfor_edittext_in_addition" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/niz"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sered"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/designfor_obj_addition"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/file"
                android:layout_width="121dp"
                android:layout_height="133dp"
                android:layout_gravity="start"
                android:paddingVertical="25dp"
                android:src="@drawable/text_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_alternates_regular"
                android:gravity="center"
                android:text="Выберите файл текста книги (.TXT .FB2 .PDF .EPUB)"
                android:textColor="@color/Orange_In_Addition" />
        </LinearLayout>

        <Button
            android:id="@+id/send"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="10dp"
            android:background="@drawable/designfor_ent_but"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:layout_below="@+id/niz"
            android:text="Отправить"
            android:textColor="@color/White"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>