<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.library.LibraryFragment"
        android:background="@color/Irek">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:id="@+id/cons_for_Log"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/White"
            android:layout_alignParentTop="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <RelativeLayout
            android:id="@+id/goingToLog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/design_for_menu_in_account"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintWidth_percent="0.8"

            >
            <TextView
                android:id="@+id/text_goToLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Зарегистрируйтесь или войдите для доступа к аккаунту"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:gravity="center"
                android:textColor="@color/Korich"
                />

            <Button
                android:id="@+id/goToLog"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/text_goToLog"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/designfor_others_but"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:paddingHorizontal="10dp"
                android:text="Авторизация"
                android:textSize="10sp"
                android:textColor="@color/White" />
        </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <include layout="@layout/header"
            android:id="@+id/Tool"
            android:visibility="gone"/>
        <ScrollView
            android:id="@+id/big_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/Tool"
            android:visibility="gone"
            android:layout_marginHorizontal="10dp"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="20dp"
                    android:background="@drawable/design_for_all_in_account"
                    >
                <androidx.cardview.widget.CardView
                    android:id="@+id/foravatar"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="70dp"
                    android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/irreeeeeeeeeeeek"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/designfor_corner_image"/>
                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:id="@+id/someinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/foravatar"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Галиев Ирек"
                        android:layout_gravity="center"
                        android:textSize="19sp"
                        android:fontFamily="@font/montserrat_alternates_bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Возраст"
                        android:layout_below="@+id/name"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_alternates_bold"
                        android:textColor="@color/Grey"
                        android:paddingBottom="10dp"/>
                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Город"
                        android:layout_below="@+id/name"
                        android:layout_toRightOf="@+id/age"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_alternates_bold"
                        android:textColor="@color/Grey"
                        android:paddingBottom="10dp"/>

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/kolvosmth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/someinfo"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/kolizbr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_alternates_bold"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_width="119dp"
                            android:layout_height="wrap_content"
                            android:text="книг в избранных"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_alternates_bold"
                            android:textColor="#000000"
                            android:textSize="11sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/koldobav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_alternates_bold"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_width="119dp"
                            android:layout_height="wrap_content"
                            android:text="книг добавлено"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_alternates_bold"
                            android:textColor="#000000"
                            android:textSize="11sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/kolrecenz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_alternates_bold"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_width="119dp"
                            android:layout_height="wrap_content"
                            android:text="рецензий"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_alternates_bold"
                            android:textColor="#000000"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:id="@+id/forFraze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/kolvosmth">
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="#000000" />

                    <TextView
                        android:id="@+id/infoaboutyourself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="Чтение дарит знание"
                        android:fontFamily="@font/montserrat_alternates_bold"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="#000000" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/forMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/forFraze"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/design_for_menu_in_account"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/menu"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:paddingHorizontal="10dp"
                        app:layout_constraintEnd_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/po_izbr"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/text_line"
                            android:fontFamily="@font/montserrat_alternates_bold"
                            android:gravity="center"
                            android:text="Избранное"
                            android:textColor="@color/Korich"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_weight="1"
                            app:layout_constraintWidth_percent="0.5" />

                        <TextView
                            android:id="@+id/po_dobav"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:fontFamily="@font/montserrat_alternates_bold"
                            android:gravity="center"
                            android:text="Добавленное"
                            android:textColor="@color/Korich"
                            android:textSize="17sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_weight="1"
                            app:layout_constraintWidth_percent="0.5" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pager"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="290dp"
                        android:layout_below="@+id/menu"
                        app:layout_constraintEnd_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/menu"
                        android:paddingBottom="10dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                    <RelativeLayout
                        android:id="@+id/forGoingToAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/design_for_menu_in_account"
                        android:layout_below="@+id/forMenu"
                        android:paddingBottom="20dp"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="10dp"
                        android:layout_marginTop="30dp"
                        >
                        <TextView
                            android:id="@+id/text_goToAdd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Вы можете добавить свою книгу или книгу, которой еще нет в нашей бибилиотеке"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_alternates_bold"
                            android:gravity="center"
                            android:textColor="@color/Korich"
                            />

                        <Button
                            android:id="@+id/goToAdd"
                            android:layout_width="101dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/text_goToAdd"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/designfor_others_but"
                            android:fontFamily="@font/montserrat_alternates_bold"
                            android:paddingHorizontal="10dp"
                            android:text="Добавить"
                            android:textSize="10sp"
                            android:textColor="@color/White" />
                    </RelativeLayout>
                    <Button
                        android:id="@+id/log_out"
                        android:layout_width="112dp"
                        android:layout_height="38dp"
                        android:layout_below="@+id/forGoingToAdd"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/designfor_others_but"
                        android:fontFamily="@font/montserrat_alternates_bold"
                        android:paddingHorizontal="10dp"
                        android:text="Выйти"
                        android:layout_marginBottom="20dp"

                        android:textColor="@color/White" />
                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>